f = int(input("Enter first number: "))
s = int(input("Enter second number: "))
act = input("Enter action(*,/,+,- ): ")

if act == "+":
    result = f + s
    print("Answer: ", result)

if act == "-":
    result = f - s
    print("Answer: ", result)

if act == "/":
    if s == 0:
        print("Eror, you cannot divide by zero.")
    else:
        result = f // s
        print("Answer: ", result)

if act == "*":
    result = f * s
    print("Answer: ", result)
